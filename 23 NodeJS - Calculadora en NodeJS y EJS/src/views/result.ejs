<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="main">
      <a class="btn" href="/?id=<%= id %>"<p>Ejecutar otra operacion</p></a>
     
      <h2 >Resultado de la accion</h2>

      <div class="box">
        <p>Ultima Operacion con numero: <p  class="n"> <%= numero %> </p>
      </div>
      
      <div class="box">
        <p> con ID:  <p  class="n"><%= id %></p> </p>
      </div>
     


      <div class="box">
        <p>Operaciones realizadas: <p  class="n"> <%= calculation %></p></p>  
      </div>
      

      <div class="box">
        <p>Valor resultante: <p class="n green"><%= result %></p></p>
      </div>
    </div>
  </body>
    <script>
    gsap.fromTo(
      ".main",
      {
        opacity: 0,
        x: -75,
      },
      {
        duration: 0.35,
        opacity: 1,
        x: 0,

      }
    );

     gsap.fromTo(
      ".n",
      {
        opacity: 0,
        y: 25,
      },
      {
        duration: 0.65,
        opacity: 1,
        y: 0,
        stagger: { 
            each: 0.25,
          }
      }
    );
  </script>
</html>
